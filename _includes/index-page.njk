{% extends "base.njk" %}

{% block main %}

    {{ content | safe }}

    <ul>
        {% for article in collections[page.fileSlug] %}
            {% if not article.data.draft and article.url !== page.url %}
                <li>
                    <a href="{{ article.url }}">{{ article.data.title }}</a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>

{% endblock main %}
